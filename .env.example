NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/api?schema=public
ACCESS_TOKEN_ALG=HS256
JWT_ACCESS_TOKEN_SECRET=__CHANGE_ME_GENERATE_32B_SECRET__
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_MS=604800000     # 7 days in ms
REFRESH_SECRET_BYTES=32            # entropy to derive per-token secret
REFRESH_COOKIE_NAME=refreshToken
REFRESH_COOKIE_SECURE=false        # set true in production (required if SameSite=None)
REFRESH_COOKIE_SAMESITE=lax        # lax | strict | none
REFRESH_COOKIE_DOMAIN=             # e.g. .example.com
CORS_ORIGIN=http://localhost:3001  # frontend (Next.js) origin
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=strong_password_here
